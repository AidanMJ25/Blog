{{- $pctx := . -}}
{{- with .OutputFormats.Get "RSS" -}}{{- .MediaType.Delimiter -}}{{- end -}}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ with .Title }}{{ . }}{{ else }}{{ .Site.Title }} -- Newsletter{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ with .Params.description }}{{ . }}{{ else }}Newsletter issues from {{ .Site.Title }}{{ end }}</description>
    <generator>Hugo {{ hugo.Version }}</generator>
    <lastBuildDate>{{ now.UTC.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>

    {{- range .Pages.ByDate.Reverse -}}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date.UTC.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      {{ with .Summary }}
      <description><![CDATA[{{ . | safeHTML }}]]></description>
      {{ end }}
      <content:encoded><![CDATA[{{ .Content | safeHTML }}]]></content:encoded>
    </item>
    {{- end -}}
  </channel>
</rss>